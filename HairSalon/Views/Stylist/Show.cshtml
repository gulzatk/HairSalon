@{
Layout = "_Layout";
}

<div class="container">

  <h3>Here are all the client who comes to this Stylist:</h3>
  @if (@Model["clients"].Count == 0)
  {
  <h3>No one have been added into this stylist client list, yet!</h3>
  }

  <ol>
    @foreach (var client in @Model["clients"])
    {
      <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetClientName()</a>
      <p><a href="/stylists/@Model["stylist"].GetId()/clients/@client.GetId()/delete" >Delete This Client</a></p>
      </li>
    }
  </ol>

  <p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client</a></p><br>

  <p><a href='/stylists'>Stylists list</a></p><br>
  <p><a href='/'>Home Page</a></p>
</div>
